	<div class="jumbotron">
		<div class="container-fluid">
			<div class="row top-align">
				<div class="col-sm-4">
					<strong>Name:</strong>
 					<%= @user.firstname + ' ' + @user.lastname %> <br>
				  <strong>Email:</strong>
				  <%= @user.email %>
				</div>
			</div>
		</div>
	</div>




<% @user.causes.each do |cause| %>
	<div class="jumbotron">
		
		<div class="container-fluid">

			<div class="col-md-10">
				<div class="row top-align">
					<h3><%= link_to cause.name, cause_path(cause) %></h3>
				</div>
				<div class="row top-align">
					<%= cause.description %>
				</div>
			</div>
			<div class="col-md-2">
				<div class="row cause-stats" id="num_hits_<%= cause.id %>">
					Hits: <%= cause.hits %>
				</div>
				<div class="row cause-stats" id="money_raised_<%= cause.id %>">
					Raised: $<%= '%.2f' % cause.money_raised %>
				</div>
				<div class="row cause-stats">
					Hit Impact: $<%= '%.2f' % cause.unit_donation %>
				</div>
				<br>
				<div class="row cause-stats">
					<%= link_to "Edit", edit_cause_path(cause), class: 'btn btn-large btn-primary' %>
				</div>
			</div>
		</div>
	</div>
<% end %>


