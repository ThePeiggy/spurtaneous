<div class="center">

  <%= form_for :user do |f| %>
    <p>
      <%= f.text_field :email, :placeholder => "Email" %>
    </p>

    <p>
      <%= f.text_field :password, :placeholder => "Password" %>
    </p>

    <p>
      <%= f.submit 'Register', :class => 'btn btn-lg btn-primary' %>
    </p>
  <% end %>

</div>
