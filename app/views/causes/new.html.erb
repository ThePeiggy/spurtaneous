<h1> New Cause </h1>
<div class="center" margin-top="100px">
  <%= form_for @cause  do |f| %>

    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name, placeholder: "Example Name" %>
    </p>

    <p>
      <%= f.label :unit_donation %><br>
      <%= f.text_field :unit_donation, placeholder: '1.00' %><br>
    </p>

    <p>
      <%= f.label :location %><br>
      <%= f.text_field :location, placeholder: current_user.location %>
    </p>

    <p>
      <%= f.label :image %><br>
      <%= f.text_field :image, placeholder: "Image URL" %><br>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description, :cols => "70", :rows => "10", :maxlength=>"750", placeholder: @cause.description %><br>
      <i>  ~ Max 150 words</i>
    </p>

    <p>
      <%= f.submit "Submit", class: "btn btn-lg btn-success" %>
    </p>
  <% end %>

  <%= link_to 'Cancel', causes_path %>
</div>
