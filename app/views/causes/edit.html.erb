<h1> Edit Cause </h1>
<div class="center" margin-top="100px">
  <%= form_for :cause, url: cause_path(@cause), method: :patch do |f| %>

    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name, placeholder: @cause.name %>
    </p>
    
    <p>
      <%= f.label :location %><br>
      <%= f.text_field :location, placeholder: @cause.location %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description, :cols => "70", :rows => "10", :maxlength=>"750", placeholder: @cause.description %><br>
      <i>  ~ Max 150 words</i>
    </p>

    <p>
      <%= f.submit "Submit", class: "btn btn-lg btn-success" %>
    </p>
  <% end %>

  <%= link_to 'Cancel', cause_path(@cause) %>
</div>
